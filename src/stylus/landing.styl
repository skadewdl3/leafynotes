.landing
  background linear-gradient(to right bottom, PRIMARY_COLOR, SECONDARY_COLOR)
  width 100%
  height 100vh
  padding 5rem

  &__title
    display flex
    align-items center
    justify-content center
    flex-direction column
    filter drop-shadow(1rem 1rem 1rem rgba(#000, 0.1)) 
    &--main
      display flex
      align-items center
      background #fff
      width 30%
      justify-content center
      padding 1rem 2rem
      clip-path polygon(5% 0, 100% 0, 95% 100%, 0 100%)
      transform rotate(-5deg)
      z-index 1
      span
        font-size 4rem
        font-family 'Megrim'
        font-weight bold
        margin auto 1rem
    &--sub
      display flex
      align-items center
      justify-content center
      background #fff
      width 15%
      padding 1rem 2rem
      clip-path polygon(5% 0, 100% 0, 95% 100%, 0 100%)
      transform translate(15rem, -2rem) rotate(-5deg)
      z-index 3
      span
        font-size 1.5rem
        font-weight 300
    &__icon
      width 7rem
      align-items center
      justify-content center